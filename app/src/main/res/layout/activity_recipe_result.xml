<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recipeResult">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <TextView
                    android:id="@+id/viewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="0dp"
                    android:text="FATOS NUTRICIONAIS"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="380dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    app:srcCompat="@color/black" />

                <TextView
                    android:id="@+id/viewQtd"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="0dp"
                    android:text="Quantidade por porção" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="380dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    app:srcCompat="@color/black" />

                <TextView
                    android:id="@+id/viewTotalCal"
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:text="Calorias totais: X" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="380dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    app:srcCompat="@color/black" />

                <TextView
                    android:id="@+id/viewFat"
                    android:layout_width="243dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="0dp"
                    android:text="Gorduras totais" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="380dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    app:srcCompat="@color/black" />

                <TextView
                    android:id="@+id/viewSodium"
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="0dp"
                    android:text="Sódio" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="380dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    app:srcCompat="@color/black" />

                <TextView
                    android:id="@+id/viewPot"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="0dp"
                    android:text="Potássio" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="380dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    app:srcCompat="@color/black" />

                <TextView
                    android:id="@+id/viewCarbo"
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="0dp"
                    android:text="Carboidratos" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="380dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    app:srcCompat="@color/black" />

                <TextView
                    android:id="@+id/viewColest"
                    android:layout_width="177dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="0dp"
                    android:text="Colesterol" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="380dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    app:srcCompat="@color/black" />

                <TextView
                    android:id="@+id/viewProt"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="0dp"
                    android:text="Proteínas" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="380dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    app:srcCompat="@color/black" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>